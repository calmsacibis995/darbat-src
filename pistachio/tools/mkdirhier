#!/bin/sh
######################################################################
##                
## Copyright (C) 2001,  Karlsruhe University
##                
## File path:     mkdirhier
## Description:   Make directory hierarchies of input names
##                
## @LICENSE@
##                
## $Id: mkdirhier,v 1.1 2001/11/27 15:52:35 skoglund Exp $
##                
######################################################################

IFS="/"
err=

for dir
do
    case "$dir" in
	-*) dir="./$dir";;
    esac

    pfx=
    path=
    for filename in $dir
    do
	path="$pfx$filename"
	pfx="$path/"
	if test ! -z "$path" -a ! -d "$path"
	then
	    mkdir "$path" || err=$?
	fi
    done
done

exit $err
